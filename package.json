{
  "name": "playwright-javascript-tests",
  "version": "1.0.0",
  "description": "Playwright test automation with JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "node scripts/performance-optimize.js && npx playwright test",
    "test:fast": "npx playwright test --workers=1",
    "test:clean": "node scripts/performance-optimize.js && npx playwright test --workers=1",
    "test:headed": "npx playwright test --headed --workers=1",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chrome": "npx playwright test --project=chromium --workers=1",
    "test:firefox": "npx playwright test --project=firefox --workers=1",
    "test:safari": "npx playwright test --project=webkit --workers=1",
    "clean": "node scripts/performance-optimize.js",
    "report": "npx playwright show-report",
    "install": "npx playwright install"
  },
  "keywords": [
    "playwright",
    "testing",
    "javascript",
    "automation",
    "e2e"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0"
  }
}